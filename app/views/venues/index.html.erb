<p id="notice"><%= notice %></p>
<h1>Listing Venues</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Venue</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.venue_id %></td>
        <td><%= link_to image_tag(venue.venue_image.thumb.url), venue.venue_image.midium.url %></td>
        <td><%= link_to 'Show', venue %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end %>
  </tbody>
</table>




<%= link_to 'New Venue', new_venue_path %>
<%# end %>