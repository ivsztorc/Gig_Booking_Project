<h1>Gigs Listings</h1>

<table>
  <thead>
    <tr>
      <th>Gig Name </th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gigs.each do |gig| %>
    <tr>
      <td><%= gig.name %></td>
      <td><%= link_to image_tag(gig.gig_image.thumb.url), gig.gig_image.midium.url %></td>

      <!-- li> <%#= form_tag(gigs_path, method: "get") do %></li> -->
         <!--  <li> --><%#= text_field_tag(:name) %><!-- </li> -->
         <!--  <li> --><%#= submit_tag("Search Gigs") %><!-- </li> -->
         <%# end %>

      <!-- <td><%#= gig.name %></td> -->
      <td><%= link_to("Show", gig_path(gig)) %></td>
      <td><%= link_to "Edit", edit_gig_path(gig) if can? :edit, Gig %></td>
      <td><%= link_to "Delete", gig_path(gig), method: :delete, data: {confirm: 'Delete them? Are you sure?'} if can? :destroy, Gig %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Gig', new_gig_path if can? :create, Gig %>
