<h2>Categories</h2>
<center>
<%= link_to 'New Category', new_category_path if can? :create, Category %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%#= link_to("Show", category_path(category)) %></td>
        <td><%= link_to "Edit", edit_category_path(category) if can? :edit, Category %></td>
        <td><%= link_to "Delete", category_path(category), method: :delete, data: {confirm: 'Delete them? Are you sure?'} if can? :destroy, Category %></td>
      </tr>
    <% end %>
  
  </tbody>
</table>
</center>
<br>